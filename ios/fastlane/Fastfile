# Fastfile for TripWallet iOS App Store deployment
# Usage:
#   fastlane beta    - Upload to TestFlight
#   fastlane release - Upload to App Store

default_platform(:ios)

platform :ios do
  before_all do
    setup_ci if ENV['CI']
  end

  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Ensure we're in the ios directory
    Dir.chdir("..") do
      # Clean and get dependencies
      sh("#{ENV['HOME']}/flutter/bin/flutter clean")
      sh("#{ENV['HOME']}/flutter/bin/flutter pub get")
      # Build iOS release
      sh("#{ENV['HOME']}/flutter/bin/flutter build ios --release --no-codesign")
    end

    # Increment build number
    increment_build_number(xcodeproj: "Runner.xcodeproj")

    # Build and sign the app
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "TripWallet.ipa"
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )

    # Clean up
    clean_build_artifacts
  end

  desc "Push a new release build to App Store"
  lane :release do
    # Ensure we're in the ios directory
    Dir.chdir("..") do
      # Clean and get dependencies
      sh("#{ENV['HOME']}/flutter/bin/flutter clean")
      sh("#{ENV['HOME']}/flutter/bin/flutter pub get")
      # Build iOS release
      sh("#{ENV['HOME']}/flutter/bin/flutter build ios --release --no-codesign")
    end

    # Increment build number
    increment_build_number(xcodeproj: "Runner.xcodeproj")

    # Build and sign the app
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "TripWallet.ipa"
    )

    # Upload to App Store Connect
    upload_to_app_store(
      skip_screenshots: true,
      skip_metadata: true,
      precheck_include_in_app_purchases: false,
      submit_for_review: false
    )

    # Clean up
    clean_build_artifacts
  end

  desc "Build only (no upload)"
  lane :build_only do
    Dir.chdir("..") do
      sh("#{ENV['HOME']}/flutter/bin/flutter clean")
      sh("#{ENV['HOME']}/flutter/bin/flutter pub get")
      sh("#{ENV['HOME']}/flutter/bin/flutter build ios --release --no-codesign")
    end

    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "TripWallet.ipa"
    )
  end

  desc "Run tests"
  lane :test do
    Dir.chdir("..") do
      sh("#{ENV['HOME']}/flutter/bin/flutter test")
    end
  end

  error do |lane, exception|
    # Handle errors
    UI.error("Error in lane #{lane}: #{exception.message}")
  end
end
