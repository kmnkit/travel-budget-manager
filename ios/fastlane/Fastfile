# Fastfile for TripWallet iOS App Store deployment
# Usage:
#   fastlane beta    - Upload to TestFlight
#   fastlane release - Upload to App Store

default_platform(:ios)

platform :ios do
  before_all do
    setup_ci if ENV['CI']
    # Ensure Homebrew binaries (including CocoaPods) are in PATH
    ENV['PATH'] = "/opt/homebrew/bin:/opt/homebrew/sbin:#{ENV['PATH']}"

    # App Store Connect API Key authentication
    app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"] || "S37Y5ZNV84",
      issuer_id: ENV["ASC_ISSUER_ID"] || "af69e6a2-d64e-4f95-9096-6412a772c0e0",
      key_filepath: ENV["ASC_KEY_FILEPATH"] || File.join(Dir.pwd, "..", "AuthKey_S37Y5ZNV84.p8"),
      in_house: false
    )
  end

  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Ensure we're in the ios directory
    Dir.chdir("..") do
      # Clean and get dependencies
      sh("#{ENV['HOME']}/flutter/bin/flutter clean")
      sh("#{ENV['HOME']}/flutter/bin/flutter pub get")
      # Build iOS release
      sh("#{ENV['HOME']}/flutter/bin/flutter build ios --release --no-codesign")
    end

    # Increment build number
    increment_build_number(xcodeproj: "Runner.xcodeproj")

    # Build and sign the app
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "TripWallet.ipa"
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )

    # Clean up
    clean_build_artifacts
  end

  desc "Push a new release build to App Store"
  lane :release do
    # Ensure we're in the ios directory
    Dir.chdir("..") do
      # Clean and get dependencies
      sh("#{ENV['HOME']}/flutter/bin/flutter clean")
      sh("#{ENV['HOME']}/flutter/bin/flutter pub get")
      # Build iOS release
      sh("#{ENV['HOME']}/flutter/bin/flutter build ios --release --no-codesign")
    end

    # Increment build number
    increment_build_number(xcodeproj: "Runner.xcodeproj")

    # Build and sign the app
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "TripWallet.ipa"
    )

    # Upload to App Store Connect
    upload_to_app_store(
      skip_screenshots: true,
      skip_metadata: true,
      precheck_include_in_app_purchases: false,
      submit_for_review: false
    )

    # Clean up
    clean_build_artifacts
  end

  desc "Build only (no upload)"
  lane :build_only do
    Dir.chdir("..") do
      sh("#{ENV['HOME']}/flutter/bin/flutter clean")
      sh("#{ENV['HOME']}/flutter/bin/flutter pub get")
      sh("#{ENV['HOME']}/flutter/bin/flutter build ios --release --no-codesign")
    end

    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "TripWallet.ipa"
    )
  end

  desc "Run tests"
  lane :test do
    Dir.chdir("..") do
      sh("#{ENV['HOME']}/flutter/bin/flutter test")
    end
  end

  desc "Upload metadata only (no build)"
  lane :metadata do
    upload_to_app_store(
      skip_binary_upload: true,
      skip_screenshots: true,
      force: true
    )
  end

  desc "Upload screenshots only"
  lane :screenshots do
    upload_to_app_store(
      skip_binary_upload: true,
      skip_metadata: true,
      force: true
    )
  end

  desc "Upload metadata and screenshots"
  lane :metadata_all do
    upload_to_app_store(
      skip_binary_upload: true,
      force: true
    )
  end

  desc "Full release with metadata and screenshots"
  lane :release_full do
    # Build first
    Dir.chdir("..") do
      sh("#{ENV['HOME']}/flutter/bin/flutter clean")
      sh("#{ENV['HOME']}/flutter/bin/flutter pub get")
      sh("#{ENV['HOME']}/flutter/bin/flutter build ios --release --no-codesign")
    end

    increment_build_number(xcodeproj: "Runner.xcodeproj")

    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "TripWallet.ipa"
    )

    # Upload everything
    upload_to_app_store(
      submit_for_review: false,
      precheck_include_in_app_purchases: false
    )

    clean_build_artifacts
  end

  error do |lane, exception|
    # Handle errors
    UI.error("Error in lane #{lane}: #{exception.message}")
  end
end
